		//定制字段
		$("#definedColumns > li").click(function(e) {
			//防止下拉菜单消失
	        e.stopPropagation();
	    });
		
	});

	jQuery(function ($) {
		$("#tb-ck").click(function () {
			$(":checkbox[name=id]").prop("checked",this.checked)
		})

		$("#_tbody").on("click",":checkbox[name=id]",function () {
			$("#tb-ck").prop("checked",
					$(":checkbox[name=id]").size() == $(":checkbox[name=id]:checked").size()
			)
		})

		$("#delBtn").click(function () {
			var del = $(":checkbox[name=id]:checked")
			if(del.size() == 0){
				alert("请选择删除项！")
				return
			}
			if(!confirm("是否删除？")){
				return;
			}
			var ids = []
			del.each(function () {
				ids.push(this.value)
			})
			ids = ids.join(",")
			$.ajax({
				url:"/activities/delete.do",
				type:"delete",
				data:{
					ids:ids
				}, success(data){
					if(data.success){
						alert(data.msg)
						$("#tb-ck").prop("checked",false)
					}

					$("#searchFrom").submit()
				}
			})
		})

			$("#searchFrom").ajaxForm(function (data) {
				var arr = []

				$(data).each(function (index) {
					arr.push(`
							<tr class="`+(index%2==0?'active':'')+`">
								<td><input type="checkbox" name="id" value="`+(this.id||"")+`"/></td>
								<td><a detail="`+this.id+`" style="text-decoration: none; cursor: pointer;">`+(this.name||"")+`</a></td>
								<td>`+(this.owner||"")+`</td>
								<td>`+(this.startDate||"")+`</td>
								<td>`+(this.endDate||"")+`</td>
							</tr>
						`)
				})

				if(data.success==false) {
					$("#_tbody").html("")
					return
				}

				$("#_tbody").html(arr.join(""))
			}).submit()

			$("#addForm").ajaxForm(function (data) {
				if(data.success){
					$("#addForm")[0].reset()
					closeModal()
					$("#searchFrom").submit()
					alert(data.msg)
				}
			})

		$("#create-bcBtn").click(function () {
			$("#addForm").submit()
		})
		$("#outBtn").click(function () {
			location = "/activities/export.do?name="+$("#searchFrom :input[name=name]").val()
		})



		$("#importBtn").click(function () {
			// ajax文件上传时使用
			var formData = new FormData();
			// 获取选择的文件数组
			var files = $("#upFile").prop("files");

			if (files.length == 0) {
				alert("请选择Excel文件！");
				return ;
			}

			formData.append("file", files[0]);

			$.ajax({
				url: "/activities/importExcel.do",
				type: "post", // 必须为post
				data: formData,
				contentType: false, // 禁止jQuery对数据进行任何修改
				processData: false, // 禁止jQuery对数据进行任何修改
				success: function (data) {
					if (data.success) {
						closeModal();
						$("#searchFrom").submit()
					}
					if (data.msg) {
						alert(data.msg);
					}
				}
			})

		});

		$("#_tbody").on("click","a[detail]",function () {
			location = "/workbench/activity/detail.html?id="+$(this).attr("detail")
		})

		$("#upForm").ajaxForm(function (data) {

		})

		$("#upBtn").click(function () {
			var upId = $(":checkbox[name=id]:checked")
			if(upId.size() == 0){
				alert("请选择编辑项！")
				return
			}
			if(upId.size() >1){
				alert("修改只能选择一项！")
				return;
			}

			$.ajax({
				url:"/activities/getId.json",
				data:{
					id:$(":checkbox[name=id]:checked").val()
				}, success(data) {

				}
			})
			op()
		})

	})
</script>
