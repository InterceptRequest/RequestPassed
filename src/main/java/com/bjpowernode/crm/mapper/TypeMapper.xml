<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjpowernode.crm.mapper.TypeMapper">
    <select id="codeVerification" resultType="boolean">
        select count(*) from tbl_dictionary_type where code = #{code}
    </select>

    <insert id="addType">
        insert into tbl_dictionary_type values (
            #{code},
            #{name},
            #{description}
        )
    </insert>

    <select id="getAll" resultType="Type">
        select * from tbl_dictionary_type
    </select>

    <delete id="delete">
        delete from tbl_dictionary_type where code in
        <foreach item="code" open="(" close=")" separator="," collection="array">
            #{code}
        </foreach>
    </delete>
    <select id="getId" resultType="Type">
        select * from tbl_dictionary_type where code = #{code}
    </select>

    <update id="update" >
        update tbl_dictionary_type set
            name=#{name},
            description=#{description}
        where
            code=#{code}
    </update>


</mapper>