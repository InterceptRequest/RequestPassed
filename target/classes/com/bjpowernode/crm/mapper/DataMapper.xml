<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjpowernode.crm.mapper.DataMapper">
   <!-- List<Dept> getALl();
    Dept getId(Serializable id);
    int Insert(Dept dept);
    int delete(Serializable id);
    int update(Dept dept);-->
    <select id="getALl" resultType="Dept">
        select * from tbl_dept
    </select>


    <select id="getId" resultType="Dept">
        select * from tbl_dept where id=#{id}
    </select>


    <insert id="insert">
        insert into tbl_dept values (
            #{id},
            #{no},
            #{name},
            #{manager},
            #{description},
            #{phone}
        )
    </insert>


    <update id="update">
        update tbl_dept set
            no=#{no},
            name=#{name},
            manager=#{manager},
            description=#{description},
            phone=#{phone}
        where
            id=#{id}
    </update>


    <delete id="delete">
        delete from tbl_dept where id in
        <foreach collection="array" separator="," close=")" open="(" item="ids">
            #{ids}
        </foreach>
    </delete>

    <select id="getOn" resultType="boolean">
        SELECT
            count(*)
        FROM
            tbl_dept
        WHERE
            no = #{no}
    </select>
</mapper>